<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/poker"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imagenVista3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/endloop" />

    <TextView
        android:id="@+id/loseMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Lo siento, has perdido. ¡Inténtalo de nuevo!"
        android:textSize="24sp" />

    <Button
        android:id="@+id/botonReiniciar"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Reiniciar" />

</LinearLayout>